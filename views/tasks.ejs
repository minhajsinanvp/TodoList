<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Assistance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    <div class="holder d-flex align-items-center justify-content-center">
    
        <div class="container">
            <!-- FOR DEMO PURPOSE -->
            
    
            
            <div class="row">
                <div class="col-lg-5 mx-auto">
    
                    <!-- CHECKBOX LIST -->
                    <div class="card rounded border-0 shadow-sm position-relative">
                        <div class="card-body p-5">
                            <div class="d-flex align-items-center mb-4 pb-4 border-bottom"><i class="far fa-calendar-alt fa-3x"></i>
                                <div class="ms-3 border border-light">
                                    <h4 class="text-uppercase fw-weight-bold mb-0 ">Wednesday</h4>
                                    <p class="text-gray fst-italic mb-0">05 December 2020</p>
                                </div>
                            </div>
                            <% tasks.forEach(task => {  %>
                                <div class="form-check mb-3">
                                    <input class="form-check-input" id="flexCheck1" type="checkbox" >
                                    <label class="form-check-label" for="flexCheck1"><span class="fst-italic pl-1"> <%= task  %> </span></label>
                                </div>
                            <% }); %>
                            
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>