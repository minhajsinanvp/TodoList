

<!DOCTYPE html>
<html lang="en" class=".bg-info">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/main.css">
</head>
<div class="container">
<body class="" style="background-color: rgb(105, 167, 167); color: rgb(34, 60, 24);">
  
<h1 class="d-flex justify-content-center align-content-center mt-5 col-sm-12">Add Tasks to complete Today</h1>
<div class="container mt-5 " >
<form action="/" method="POST" class="d-flex justify-content-center align-content-center">
  <label for="tasks" class="h2  col-sm-12 col-md-4" >Write Tasks to Complete</label>
  <input type="text" id="checkbox" name="task" style="height: 50px; width: 500px;" class="col-md-3">
  <button type="submit" class="btn btn-outline-info btn-lg ms-4 col-md-1" style="color: black; height: 50px;">Add</button>
</div>
</div>
<div class="holder d-flex align-items-center justify-content-center">
    
  <div class="container mt-5 " >
      <!-- FOR DEMO PURPOSE -->
      

      
      <div class="row">
          <div class="col-lg-5 mx-auto">

              <!-- CHECKBOX LIST -->
              <div class="card rounded border-0 shadow-sm position-relative" style="background-color: rgb(83, 56, 255,.5); color: whitesmoke;">
                  <div class="card-body p-5">
                      <div class="d-flex align-items-center mb-4 pb-4 border-bottom"><i class="far fa-calendar-alt fa-3x"></i>
                          <div class="ms-3 border border-info p-3">
                              <h4 class=" fw-weight-bold mb-0 "><%= date %></h4>
                            
                          </div>
                      </div>
                      <% if(locals.tasksList){ %>
                      <% tasksList.forEach(task => {  %>
                          <div class="form-check mb-3">
                              <input class="form-check-input" id="flexCheck1" type="checkbox" >
                              <label class="form-check-label" for="flexCheck1"><span class="fst-italic pl-1"> <%= task  %> </span></label>
                          </div>
                      <% }); %>
                      
                      <% } %>
                      
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>



</body>
</html>